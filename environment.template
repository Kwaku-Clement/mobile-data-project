# ===========================================
# RAZILHUB - MOBILE DATA VENDING PLATFORM
# Environment Configuration Template
# ===========================================

# ===========================================
# FLASK APPLICATION CONFIGURATION
# ===========================================
FLASK_APP=wsgi.py
FLASK_ENV=production
FLASK_DEBUG=False

# Secret key for Flask sessions and CSRF protection
# Generate a strong secret key for production
SECRET_KEY=your-super-secret-key-change-this-in-production-2025

# Application URL (for generating absolute URLs)
APP_URL=https://your-domain.com
APP_NAME=RazilHub
APP_VERSION=1.0.0

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# For SQLite (Development)
DATABASE_URL=sqlite:///data_vending.db

# For PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/razilhub_db
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=razilhub_db
# DB_USER=razilhub_user
# DB_PASSWORD=your-db-password

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Session configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=86400

# CSRF protection
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600

# Rate limiting
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=100 per hour

# ===========================================
# OTP AND AUTHENTICATION
# ===========================================
# OTP configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6
OTP_ATTEMPTS_LIMIT=3

# SMS/OTP Service Configuration
# For Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# For Africa's Talking
AFRICASTALKING_USERNAME=your-username
AFRICASTALKING_API_KEY=your-api-key
AFRICASTALKING_SENDER_ID=RazilHub

# For custom SMS gateway
SMS_GATEWAY_URL=https://your-sms-gateway.com/api
SMS_GATEWAY_API_KEY=your-sms-api-key
SMS_GATEWAY_SENDER_ID=RazilHub

# ===========================================
# PAYMENT GATEWAY CONFIGURATION
# ===========================================
# Mobile Money (MTN, Vodafone, AirtelTigo)
MTN_MOMO_API_URL=https://api.mtn.com/v1/collection
MTN_MOMO_API_KEY=your-mtn-momo-api-key
MTN_MOMO_SUBSCRIPTION_KEY=your-mtn-subscription-key

VODAFONE_CASH_API_URL=https://api.vodafone.com.gh/v1/cash
VODAFONE_CASH_API_KEY=your-vodafone-api-key

AIRTELTIGO_MONEY_API_URL=https://api.airteltigo.com.gh/v1/money
AIRTELTIGO_MONEY_API_KEY=your-airteltigo-api-key

# Card payments
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# ===========================================
# NETWORK API INTEGRATIONS
# ===========================================
# MTN Data API
MTN_API_URL=https://api.mtn.com.gh/v1/data
MTN_API_KEY=your-mtn-data-api-key
MTN_API_SECRET=your-mtn-api-secret

# Telecel Data API
TELECEL_API_URL=https://api.telecel.com.gh/v1/data
TELECEL_API_KEY=your-telecel-api-key
TELECEL_API_SECRET=your-telecel-api-secret

# AirtelTigo Data API
AIRTELTIGO_API_URL=https://api.airteltigo.com.gh/v1/data
AIRTELTIGO_API_KEY=your-airteltigo-api-key
AIRTELTIGO_API_SECRET=your-airteltigo-api-secret

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=RazilHub <noreply@razilhub.com>

# Email templates
EMAIL_FROM_NAME=RazilHub
EMAIL_FROM_ADDRESS=noreply@razilhub.com
EMAIL_SUPPORT_ADDRESS=support@razilhub.com

# ===========================================
# CLOUD STORAGE CONFIGURATION
# ===========================================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=razilhub-uploads

# Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=razilhub-storage
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# ===========================================
# CACHING CONFIGURATION
# ===========================================
# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Memcached
MEMCACHED_SERVERS=localhost:11211

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=logs/razilhub.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# MONITORING AND ANALYTICS
# ===========================================
# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X

# Mixpanel
MIXPANEL_TOKEN=your-mixpanel-token

# ===========================================
# WALLET CONFIGURATION
# ===========================================
DEFAULT_WALLET_BALANCE=50.0
MIN_WALLET_BALANCE=0.0
MAX_WALLET_BALANCE=10000.0
WALLET_TRANSACTION_FEE=0.0

# ===========================================
# SERVICE CONFIGURATION
# ===========================================
# Service fees and commissions
DATA_SERVICE_COMMISSION=0.05
CAR_WASH_COMMISSION=0.10
DELIVERY_COMMISSION=0.15
FOOD_SERVICE_COMMISSION=0.20

# Service availability
ENABLE_DATA_SERVICE=True
ENABLE_CAR_WASH=True
ENABLE_DELIVERY=True
ENABLE_FOOD_SERVICE=True

# ===========================================
# API CONFIGURATION
# ===========================================
API_RATE_LIMIT=100 per hour
API_KEY_LENGTH=32
API_VERSION=v1

# External API timeouts
API_TIMEOUT=30
SMS_API_TIMEOUT=10
PAYMENT_API_TIMEOUT=60

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif

# ===========================================
# NOTIFICATION CONFIGURATION
# ===========================================
# Push notifications
FCM_SERVER_KEY=your-fcm-server-key
APNS_CERTIFICATE_PATH=path/to/apns-cert.pem
APNS_KEY_PATH=path/to/apns-key.pem

# Webhook URLs
WEBHOOK_SUCCESS_URL=https://your-domain.com/webhook/success
WEBHOOK_FAILURE_URL=https://your-domain.com/webhook/failure

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# Debug settings (only for development)
DEBUG=False
TESTING=False
WTF_CSRF_ENABLED=True

# Development database
DEV_DATABASE_URL=sqlite:///dev_data_vending.db

# ===========================================
# PRODUCTION DEPLOYMENT
# ===========================================
# Server configuration
HOST=0.0.0.0
PORT=5001
WORKERS=4
TIMEOUT=120

# SSL configuration
SSL_CERT_PATH=ssl/cert.pem
